{
	"name": "cra-template-tb",
	"version": "0.1.0",
	"devDependencies": {
		"husky": "4.3.8",
		"lint-staged": "10.5.4",
		"prettier": "2.2.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{json,md}": [
			"prettier --write"
		]
	},
	"prettier": {
		"arrowParens": "avoid",
		"bracketSpacing": true,
		"jsxBracketSameLine": false,
		"jsxSingleQuote": false,
		"htmlWhitespaceSensitivity": "strict",
		"printWidth": 80,
		"proseWrap": "preserve",
		"quoteProps": "as-needed",
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "none",
		"useTabs": true
	}
}
